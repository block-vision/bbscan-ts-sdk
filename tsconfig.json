{
	"compilerOptions": {
		"target": "ES6",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
